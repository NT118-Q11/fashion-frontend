<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_skin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/yellow_skin">

            <!-- Header with Back Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/yellow_skin">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/black"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no" />

            </RelativeLayout>

            <!-- Delivery Method Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingBottom="32dp"
                android:background="@color/yellow_skin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery method"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/layoutDeliveryMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvDeliveryMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choose a delivery method"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:alpha="0.7" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        app:tint="@color/black"
                        android:importantForAccessibility="no" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:alpha="0.15" />

            </LinearLayout>

            <!-- Shipping Address Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingBottom="32dp"
                android:background="@color/yellow_skin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipping address"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/layoutShippingAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvShippingAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add a Billing address"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:alpha="0.7" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        app:tint="@color/black"
                        android:importantForAccessibility="no" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:alpha="0.15" />

            </LinearLayout>

            <!-- Payment Method Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingBottom="140dp"
                android:background="@color/yellow_skin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment method"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:id="@+id/layoutPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Payment Methods"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:alpha="0.7" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        app:tint="@color/black"
                        android:importantForAccessibility="no" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/yellow_skin"
        android:paddingHorizontal="28dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <!-- Checkout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckoutMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CHECKOUT"
            android:textSize="15sp"
            android:letterSpacing="0.12"
            android:textColor="@color/black"
            app:backgroundTint="@color/yellow_skin"
            app:strokeColor="@color/black"
            app:strokeWidth="1.5dp"
            app:cornerRadius="0dp"
            android:layout_marginBottom="12dp" />

        <!-- Pay Amount -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PAY: $430"
            android:textSize="15sp"
            android:letterSpacing="0.12"
            android:textColor="@color/white"
            app:backgroundTint="@color/black"
            app:cornerRadius="0dp"
            android:elevation="0dp" />

    </LinearLayout>

</RelativeLayout>
