<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomCheckoutSection"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/btnBackCheckout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="@color/black"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="CHECKOUT"
                    android:textSize="17sp"
                    android:letterSpacing="0.15"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:alpha="0.15" />

            <!-- Customer Info Section -->
            <LinearLayout
                android:id="@+id/layoutCustomerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iris Watson"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvCustomerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="606-3727 Ullamcorper. Street\nRoseville NH 11523"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/gray"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/tvCustomerPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(786) 713-8616"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/gray"
                    android:alpha="0.8" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="12dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="270"
                    android:tint="@color/black"
                    android:importantForAccessibility="no" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/gray"
                android:alpha="0.15" />

            <!-- Payment Method Info -->
            <LinearLayout
                android:id="@+id/layoutPaymentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/imgPaymentIconSummary"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="20dp"
                    android:padding="8dp"
                    android:background="@color/yellow_skin"
                    android:src="@android:drawable/ic_menu_search"
                    android:importantForAccessibility="no" />

                <TextView
                    android:id="@+id/tvPaymentSummary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Master Card ending ••••89"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:rotation="270"
                    android:tint="@color/black"
                    android:importantForAccessibility="no" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:background="@color/gray"
                android:alpha="0.15" />

            <!-- Cart Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCheckoutItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottomCheckoutSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:alpha="0.15"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOTAL"
                android:textSize="15sp"
                android:letterSpacing="0.12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$240"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@color/orange" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinalCheckout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="CHECKOUT"
            android:textSize="15sp"
            android:letterSpacing="0.12"
            android:textColor="@color/white"
            app:icon="@android:drawable/ic_menu_search"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconPadding="8dp"
            app:backgroundTint="@color/black"
            app:cornerRadius="0dp"
            android:elevation="0dp" />

    </LinearLayout>

</RelativeLayout>
