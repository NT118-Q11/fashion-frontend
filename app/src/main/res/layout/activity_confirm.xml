<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F4F1EC">

    <!-- Back button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/ic_arrow_back"
        app:tint="#000"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/tenorsans"
        android:textColor="#000"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll phần thông tin -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/totalContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Customer in4 -->
            <LinearLayout
                android:id="@+id/address_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuan Te"
                        android:textSize="20sp"
                        android:fontFamily="@font/tenorsans"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvCustomerAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="606-3727 Ullamcorper, Street\nRoseville NH 11523\n(786) 713-8616"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgAddressArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_right"
                    android:contentDescription="Open address"
                    app:tint="#000"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- PAYMENT METHOD -->
            <LinearLayout
                android:id="@+id/btnPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPaymentIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/ic_card"
                    android:contentDescription="Payment icon"/>

                <TextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Credit Card ending •••• 89"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/imgArrowRight"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/ic_right"
                    android:contentDescription="Open payment methods"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD"
                android:layout_marginVertical="16dp"/>

            <!-- ORDER ITEMS -->
            <TextView
                android:id="@+id/tvOrderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER ITEMS"
                android:textStyle="bold"
                android:fontFamily="@font/tenorsans"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginBottom="12dp" />

            <!-- RecyclerView cho order items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_confirm_product"
                tools:itemCount="2"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </ScrollView>

    <!-- TOTAL -->
    <LinearLayout
        android:id="@+id/totalContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutBottom">

        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textSize="15sp"
            android:textColor="#000"
            android:fontFamily="@font/tenorsans"/>

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$240"
            android:textSize="18sp"
            android:textColor="#C67A5C"
            android:fontFamily="@font/tenorsans"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Confirm -->
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#000"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:fontFamily="@font/tenorsans"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
