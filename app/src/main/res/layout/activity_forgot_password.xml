<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1EC">

    <ImageView
        android:id="@+id/logo_noive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Logo Noive"
        android:scaleType="fitCenter"
        android:src="@drawable/noive_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- TITLE -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/tenorsans"
        android:letterSpacing="0.05"
        android:text="@string/forgot_password_title"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_noive" />

    <!-- EMAIL INPUT -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:hint="Email"
        app:hintTextColor="#AFAFAF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#C67A5C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/tenorsans"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- SEND OTP BUTTON -->
    <Button
        android:id="@+id/btn_send_otp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="SEND OTP"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C67A5C"
        android:fontFamily="@font/tenorsans"
        android:textSize="16sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/email_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP SECTION (Initially hidden) -->
    <LinearLayout
        android:id="@+id/otp_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_enter_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/tenorsans"
            android:text="@string/enter_your_code"
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- 6 OTP Input Boxes -->
        <LinearLayout
            android:id="@+id/otp_boxes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/et_otp_1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

            <EditText
                android:id="@+id/et_otp_2"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

            <EditText
                android:id="@+id/et_otp_3"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

            <EditText
                android:id="@+id/et_otp_4"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

            <EditText
                android:id="@+id/et_otp_5"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

            <EditText
                android:id="@+id/et_otp_6"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#C67A5C"
                android:fontFamily="@font/tenorsans"/>

        </LinearLayout>

        <!-- Error message for OTP -->
        <TextView
            android:id="@+id/tv_otp_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:textColor="#B00020"
            android:textSize="12sp"
            android:visibility="gone"
            android:fontFamily="@font/tenorsans"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_sent_otp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tenorsans"
                android:text="OTP sent to your email"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend"
                android:fontFamily="@font/tenorsans"
                android:textColor="#C67A5C"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- NEW PASSWORD INPUT -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:hint="New Password"
            app:hintTextColor="#AFAFAF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#C67A5C"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/tenorsans"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONFIRM PASSWORD INPUT -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirm_password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:hint="Confirm Password"
            app:hintTextColor="#AFAFAF"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#C67A5C"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="@font/tenorsans"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- RESET PASSWORD BUTTON -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="RESET PASSWORD"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C67A5C"
        android:fontFamily="@font/tenorsans"
        android:textSize="17sp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/otp_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NOT NOW -->
    <TextView
        android:id="@+id/tv_not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_now"
        android:textAllCaps="true"
        android:textColor="#6E6E6E"
        android:textSize="13sp"
        android:letterSpacing="0.1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/tenorsans"
        app:layout_constraintTop_toBottomOf="@id/btn_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
