<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1E8"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search -->
        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Search"
            app:srcCompat="@drawable/ic_search"
            app:tint="#1E1E1E"
            android:layout_marginTop="5dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Favorite -->
        <ImageView
            android:id="@+id/ic_fav_top"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Favorites"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_favorite_border"
            app:tint="#1E1E1E" />

    </LinearLayout>

    <!-- Reel container between top bar and bottom nav -->
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar">

        <!-- Vertical ViewPager2 for reels -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/reelPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- WOMEN / MAN / KIDS -->
        <LinearLayout
            android:id="@+id/category_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cat_women"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#bfbfbf"
                android:fontFamily="@font/tenorsans"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:paddingVertical="6dp"
                android:text="WOMEN"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cat_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MAN"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#bfbfbf"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp"
                android:fontFamily="@font/tenorsans" />

            <TextView
                android:id="@+id/cat_kids"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KIDS"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#bfbfbf"
                android:paddingVertical="6dp"
                android:paddingHorizontal="4dp"
                android:fontFamily="@font/tenorsans" />

        </LinearLayout>

        <!-- Vertical reel indicator container -->
        <FrameLayout
            android:id="@+id/reelIndicatorContainer"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:paddingVertical="24dp"
            android:paddingHorizontal="6dp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navHome"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Home"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:tint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navNotifications"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Notifications"
            app:icon="@drawable/ic_notifications"
            app:iconSize="28dp"
            app:tint="@color/white"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navCart"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Cart"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="28dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navProfile"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Profile"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:tint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
