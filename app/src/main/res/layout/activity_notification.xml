<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4f1ec">

    <!-- Title -->
    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTIFICATION"
        android:fontFamily="@font/tenorsans"
        android:textStyle="bold"
        android:textSize="20sp"
        android:letterSpacing="0.1"
        android:layout_marginTop="24dp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Danh sách thông báo -->
    <ScrollView
        android:id="@+id/notificationScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNotificationTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mẫu một item thông báo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFF">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="New Product Sale"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:fontFamily="@font/tenorsans"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:text="20% Off on all the new arrivals!"
                        android:textColor="#555"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/tenorsans"
                        android:layout_width="wrap_content"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Icon -->

        <!-- Notifications Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navHome"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Home"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:tint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navNotifications"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@drawable/ic_notifications"
            app:iconSize="28dp"
            app:tint="@color/white"
            app:iconGravity="textStart"
            android:contentDescription="Notifications" />

        <!-- Cart Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navCart"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            android:contentDescription="Cart" />

        <!-- Profile Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navProfile"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Profile"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:tint="@color/white" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
