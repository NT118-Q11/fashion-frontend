<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4f1ec"
    android:fitsSystemWindows="true">

    <!-- Success Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="40dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tenorsans"
                android:letterSpacing="0.12"
                android:text="PAYMENT SUCCESS"
                android:textColor="#2D2D2D"
                android:textSize="18sp" />

            <!-- Check icon -->
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="success"
                android:src="@drawable/ic_success" />

            <!-- Text -->
            <TextView
                android:id="@+id/tvSuccessMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/tenorsans"
                android:text="Your payment was successful"
                android:textColor="#3A3A3A"
                android:textSize="15sp" />

            <!-- Payment ID -->
            <TextView
                android:id="@+id/tvPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/tenorsans"
                android:text="Order ID: 15263541"
                android:textColor="#6F6F6F"
                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Rate Products Title -->
    <TextView
        android:id="@+id/tvRateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/tenorsans"
        android:text="Rate your purchased products"
        android:textColor="#3A3A3A"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardSuccess"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Products Rating List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductRatings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvRateTitle"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product_rating" />

    <!-- Empty State (when no products to rate) -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvRateTitle"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No products to rate"
            android:textColor="#6F6F6F"
            android:textSize="14sp"
            android:fontFamily="@font/tenorsans" />

    </LinearLayout>

    <!-- BUTTONS -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:paddingTop="8dp"
        android:background="#F4f1ec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SUBMIT RATINGS"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@color/black"
            android:fontFamily="@font/tenorsans" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SKIP"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#2D2D2D"
            android:background="@color/white"
            android:fontFamily="@font/tenorsans"
            android:layout_marginStart="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
