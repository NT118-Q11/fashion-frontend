<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4f1ec"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="40dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT SUCCESS"
                android:textColor="#2D2D2D"
                android:fontFamily="@font/tenorsans"
                android:textSize="20sp"
                android:letterSpacing="0.12"
                android:layout_marginTop="12dp" />

            <!-- Check icon -->
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="14dp"
                android:src="@drawable/ic_success"
                android:contentDescription="success" />

            <!-- Text -->
            <TextView
                android:id="@+id/tvSuccessMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your payment was success"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/tenorsans"
                android:textSize="17sp"
                android:layout_marginTop="12dp" />

            <!-- Payment ID -->
            <TextView
                android:id="@+id/tvPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment ID   15263541"
                android:textColor="#6F6F6F"
                android:fontFamily="@font/tenorsans"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="#D9D4CB"
                android:layout_marginTop="6dp" />

            <!-- Rate your purchase -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your purchase"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/tenorsans"
                android:textSize="17sp"
                android:layout_marginTop="16dp" />

            <!-- Rating icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/rateBad"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_rate_bad"
                    android:contentDescription="bad" />

                <ImageView
                    android:id="@+id/rateNormal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginHorizontal="18dp"
                    android:src="@drawable/ic_rate_normal"
                    android:contentDescription="normal" />

                <ImageView
                    android:id="@+id/rateGood"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_rate_good"
                    android:contentDescription="good" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- BUTTONS -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@color/black"
            android:fontFamily="@font/tenorsans" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="BACK TO HOME"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#2D2D2D"
            android:background="@color/white"
            android:fontFamily="@font/tenorsans"
            android:layout_marginStart="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
