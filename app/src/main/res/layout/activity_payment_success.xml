<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4f1ec"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/tenorsans"
                android:letterSpacing="0.12"
                android:text="PAYMENT SUCCESS"
                android:textColor="#2D2D2D"
                android:textSize="20sp" />

            <!-- Check icon -->
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="14dp"
                android:contentDescription="success"
                android:src="@drawable/ic_success" />

            <!-- Text -->
            <TextView
                android:id="@+id/tvSuccessMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/tenorsans"
                android:text="Your payment was success"
                android:textColor="#3A3A3A"
                android:textSize="17sp" />

            <!-- Payment ID -->
            <TextView
                android:id="@+id/tvPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tenorsans"
                android:text="Payment ID   15263541"
                android:textColor="#6F6F6F"
                android:textSize="14sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:background="#D9D4CB" />

            <!-- Rate your purchase -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/tenorsans"
                android:text="Rate your purchase"
                android:textColor="#3A3A3A"
                android:textSize="17sp" />

            <!-- Rating icons -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:progressTint="#FFD700"
                android:secondaryProgressTint="#FFD700" />

            <!-- Comment Input -->
            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/box_border"
                android:hint="Write your comment..."
                android:padding="12dp"
                android:gravity="top|start"
                android:minLines="3"
                android:inputType="textMultiLine|textCapSentences"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/tenorsans"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- BUTTONS -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@color/black"
            android:fontFamily="@font/tenorsans" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="BACK TO HOME"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#2D2D2D"
            android:background="@color/white"
            android:fontFamily="@font/tenorsans"
            android:layout_marginStart="12dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
