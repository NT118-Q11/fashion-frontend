<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F4F1EC"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#F4F1EC"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Nút Back -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/black"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search"
            android:fontFamily="@font/tenorsans"
            android:minHeight="48dp"
            android:paddingVertical="8dp"
            android:textColor="@color/black"
            android:textColorHint="#888" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_close"
            app:tint="#555"/>

        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_search"
            app:tint="#000"/>
    </LinearLayout>

    <View
        android:id="@+id/search_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Result Count -->
    <TextView
        android:id="@+id/tv_result_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 RESULT OF DRESS"
        android:textSize="14sp"
        android:fontFamily="@font/tenorsans"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--Danh sách kêt quả RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_search_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"

        tools:listitem="@layout/item_search_result"
        android:paddingHorizontal="16dp"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_result_count"
        app:layout_constraintBottom_toTopOf="@id/pagination_container"/>
    <!-- Thanh chuyển trang -->
    <LinearLayout
        android:id="@+id/pagination_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/page_prev"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_arrow_left"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/page_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:background="@drawable/page_selected_bg"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/page_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000"
            android:background="@drawable/page_unselected_bg"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/page_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:background="@drawable/page_unselected_bg"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/page_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="4"
            android:textColor="#000000"
            android:background="@drawable/page_unselected_bg"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/page_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#000000"
            android:background="@drawable/page_unselected_bg"
            android:layout_marginStart="6dp"/>
        <ImageView
            android:id="@+id/page_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="#000000"/>
    </LinearLayout>

    <!-- Nav Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Icon -->

        <!-- Notifications Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navHome"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Home"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:tint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navNotifications"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@drawable/ic_notifications"
            app:iconSize="28dp"
            app:tint="@color/white"
            app:iconGravity="textStart"
            android:contentDescription="Notifications" />

        <!-- Cart Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navCart"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            android:contentDescription="Cart" />

        <!-- Profile Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navProfile"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Profile"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:tint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
