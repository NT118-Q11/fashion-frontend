<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:background="@color/yellow_skin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/yellow_skin">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imgCartProduct"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            android:background="@color/white" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Brand Name -->
            <TextView
                android:id="@+id/tvCartBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LAMEREI"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.15"
                android:textColor="@color/black" />

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvCartProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycle Boucle Knit Cardigan Pink"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray" />

            <!-- Quantity Controls and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <!-- Minus Button -->
                <TextView
                    android:id="@+id/btnMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="âˆ’"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@color/black" />

                <!-- Plus Button -->
                <TextView
                    android:id="@+id/btnPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="+"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Price -->
                <TextView
                    android:id="@+id/tvCartPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$120"
                    android:textSize="16sp"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:gravity="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

