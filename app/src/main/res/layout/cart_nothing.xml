<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1EC"
    android:fitsSystemWindows="true">

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_above="@+id/bottomNavBar">

        <!-- Header -->
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tenorsans"
                    android:layout_marginTop="20dp"
                    android:text="CART"
                    android:textSize="18sp"
                    android:letterSpacing="0.3"
                    android:textColor="@color/black" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Empty Cart State -->
        <LinearLayout
            android:id="@+id/emptyCartLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:importantForAccessibility="no"
                    android:src="@drawable/glass" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tenorsans"
                android:text="YOU HAVE NOTHING IN CART!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:layout_marginTop="32dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/tenorsans"
                android:gravity="center"
                android:text="Please continue shopping to see your\nproducts here!"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShoppingNow"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/tenorsans"
                android:text="SHOPPING NOW"
                android:textSize="14sp"
                android:letterSpacing="0.05"
                android:textColor="@color/white"
                app:backgroundTint="@color/black"
                app:cornerRadius="0dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/black"
        android:gravity="center"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Home Icon -->

        <!-- Notifications Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navHome"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Home"
            app:icon="@drawable/ic_home"
            app:iconGravity="textStart"
            app:iconSize="28dp"
            app:tint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navNotifications"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@drawable/ic_notifications"
            app:iconSize="28dp"
            app:tint="@color/white"
            app:iconGravity="textStart"
            android:contentDescription="Notifications" />

        <!-- Cart Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navCart"
            android:backgroundTint="@color/black"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:iconTint="@color/white"
            app:icon="@drawable/ic_shopping_bag"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            android:contentDescription="Cart" />

        <!-- Profile Icon -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/navProfile"
            style="?attr/materialIconButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:contentDescription="Profile"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconSize="30dp"
            app:tint="@color/white" />

    </LinearLayout>

</RelativeLayout>
