<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#F4F1EC">


    <LinearLayout
        android:id="@+id/clothes_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4F1EC"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        
        <TextView
            android:id="@+id/clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress"
            android:fontFamily="@font/tenorsans"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/tenorsans"
            android:lineSpacingExtra="10dp"
            android:textColor="#979797"
            android:text="• Product code 4393336 \n• Shoulder bag in black coor, short strips, a corset-style neckline and straps on the back."/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/size_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/clothes_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/black"
            android:text="Size selection"
            android:fontFamily="@font/tenorsans"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_s"
                android:layout_height="56dp"
                android:layout_width="56dp"
                android:backgroundTint="@color/white"
                android:text="S"
                android:textColor="@color/black"
                android:fontFamily="@font/tenorsans"
                android:textSize="18sp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_m"
                android:layout_height="56dp"
                android:layout_width="56dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/white"
                android:text="M"
                android:textColor="@color/black"
                android:fontFamily="@font/tenorsans"
                android:textSize="18sp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_l"
                android:layout_height="56dp"
                android:layout_width="56dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/white"
                android:text="L"
                android:textColor="@color/black"
                android:fontFamily="@font/tenorsans"
                android:textSize="18sp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_xl"
                android:layout_height="56dp"
                android:layout_width="58dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/white"
                android:text="XL"
                android:textColor="@color/black"
                android:fontFamily="@font/tenorsans"
                android:textSize="18sp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/size_selection">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color selection"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/tenorsans"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">
            
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                android:layout_marginStart="10dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>