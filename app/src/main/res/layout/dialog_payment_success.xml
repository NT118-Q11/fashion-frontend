<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="40dp">

        <!-- Close Button -->
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/black"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="PAYMENT SUCCESS"
            android:textSize="19sp"
            android:letterSpacing="0.15"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" />

        <!-- Success Icon -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginVertical="36dp">

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.05" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@android:drawable/checkbox_on_background"
                android:tint="@color/orange"
                android:importantForAccessibility="no" />

            <!-- Sparkles decoration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="✨"
                android:textSize="24sp"
                android:alpha="0.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="16dp"
                android:text="✨"
                android:textSize="20sp"
                android:alpha="0.4" />

        </FrameLayout>

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your payment was success"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Payment ID -->
        <TextView
            android:id="@+id/tvPaymentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Payment ID 15263541"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:alpha="0.7"
            android:layout_marginBottom="32dp" />

        <!-- Elegant Divider -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:alpha="0.2" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="12dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:alpha="0.3" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:alpha="0.2" />

        </LinearLayout>

        <!-- Rate Your Purchase -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Rate your purchase"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp" />

        <!-- Rating Emojis -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="36dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                android:background="@color/yellow_skin">

                <ImageView
                    android:id="@+id/imgRatingSad"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@color/orange"
                    android:alpha="0.4"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                android:background="@color/yellow_skin">

                <ImageView
                    android:id="@+id/imgRatingNeutral"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:tint="@color/orange"
                    android:alpha="0.4"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp"
                android:background="@color/yellow_skin">

                <ImageView
                    android:id="@+id/imgRatingHappy"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/orange"
                    android:alpha="0.4"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:importantForAccessibility="no" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitRating"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="SUBMIT"
                android:textSize="15sp"
                android:letterSpacing="0.12"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@color/black"
                app:cornerRadius="0dp"
                android:elevation="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToHome"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="BACK TO HOME"
                android:textSize="15sp"
                android:letterSpacing="0.12"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                app:backgroundTint="@color/yellow_skin"
                app:strokeColor="@color/black"
                app:strokeWidth="1.5dp"
                app:cornerRadius="0dp"
                android:elevation="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
