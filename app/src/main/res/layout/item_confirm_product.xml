<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:background="@drawable/box_border"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_woman" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAMEREI"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/tenorsans"/>

        <TextView
            android:id="@+id/tvProductDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recycle Boucle Knit Cardigan Pink"
            android:textColor="#777"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>

        <!-- Size and Color info -->
        <TextView
            android:id="@+id/tvVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: M | Color: Black"
            android:fontFamily="@font/tenorsans"
            android:textSize="11sp"
            android:textColor="#999"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

        <!-- Số lượng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="-"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="+"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$120"
        android:textColor="#C75C32"
        android:textSize="16sp"
        android:fontFamily="@font/tenorsans"
        android:layout_gravity="bottom"/>
</LinearLayout>
