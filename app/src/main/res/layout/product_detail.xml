<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1EC"
    android:fitsSystemWindows="true">

    <!-- BACK -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/arrow_left"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logo_noive"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Logo Noive"
        android:scaleType="fitCenter"
        android:src="@drawable/noive_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- SEARCH -->
    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="56dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CART -->
    <ImageButton
        android:id="@+id/btnCart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_shopping_bag"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/btnAddToCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">

            <!-- IMAGE SWIPE -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerProduct"
                android:layout_width="0dp"
                android:padding="20dp"
                android:layout_height="420dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- DOTS -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tabIndicatorHeight="0dp"
                app:tabGravity="center"
                app:tabBackground="@drawable/selector"/>

            <!-- NAME -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MOHAN"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/tenorsans"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/viewPagerProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- DESC -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recycle Boucle Knit Cardigan Pink"
                android:textSize="16sp"
                android:textColor="@color/noive_text_secondary"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/tenorsans"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- PRICE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200"
                android:textSize="18sp"
                android:textColor="@color/orange"
                android:layout_marginTop="35dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- COLOR + SIZE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/colorSizeContainer"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                android:fontFamily="@font/tenorsans"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- COLOR -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="65dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="16dp"
                        android:fontFamily="@font/tenorsans"/>

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/black" />
                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/orange" />
                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/noive_border" />
                </LinearLayout>

                <!-- SIZE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="60dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size"
                        android:textSize="16dp"
                        android:fontFamily="@font/tenorsans"/>

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="@color/white"
                        android:background="@color/black"/>

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:text="M"/>

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:text="L"/>
                </LinearLayout>
            </LinearLayout>

            <!-- INFO / RATING -->
            <LinearLayout
                android:id="@+id/layoutTabs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/colorSizeContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tabInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Information"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tabRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rating"
                    android:textSize="18sp"
                    android:textColor="@color/noive_text_secondary"
                    android:gravity="center"/>
            </LinearLayout>


            <!-- UNDERLINE -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/noive_border"
                app:layout_constraintTop_toBottomOf="@id/layoutTabs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- ADD TO CART -->
    <TextView
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Add To Cart Â· $200"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/tenorsans"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
